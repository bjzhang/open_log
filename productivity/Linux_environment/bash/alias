alias ls="ls --color"
alias grep="grep --color"
alias rm="rm -I"
alias git_no_ssl='git -c http.sslVerify=false'
alias gitl="git log --oneline"
alias gitdno="git diff --no-ext-diff"
alias gitds="git diff --staged"
alias gitcasm="git commit -a -s -m"
alias gitcsm="git commit -s -m"
alias gitcaa="git commit -a --amend"
alias gitcaano="git commit -a --amend --no-edit"
